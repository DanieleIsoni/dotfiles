font-family-bold = "JetBrainsMono Nerd Font Bold"
font-family-italic = "JetBrainsMono Nerd Font Italic"
font-family-bold-italic = "JetBrainsMono Nerd Font Bold Italic"

copy-on-select = clipboard

window-theme = "dark"

#mouse-hide-while-typing = true

# background-opacity=0.98
# background-blur-radius=20

shell-integration-features = cursor,sudo,no-title
macos-titlebar-style = hidden
macos-option-as-alt = right

keybind = global:shift+opt+ctrl+cmd+t=toggle_quick_terminal

# Tmux

## [ctrl+b c] tmux create a new window
keybind = cmd+t=text:\x02c
## [ctrl+b w] tmux show windows
keybind = cmd+w=text:\x02w
## [ctrl+b n] tmux next windows
keybind = cmd+n=text:\x02n
## [ctrl+b p] tmux prev windows
keybind = cmd+p=text:\x02p
## [ctrl+b x] tmux kill pane
keybind = cmd+x=text:\x02x
## [ctrl+b d] tmux detach
keybind = cmd+d=text:\x02d
## [ctrl+b %] tmux split vertical
keybind = cmd+five=text:\x02%
## [ctrl+b "] tmux split horizontal
keybind = cmd+apostrophe=text:\x02"
## [ctrl+b I] tmux Install plugins
keybind = cmd+shift+i=text:\x02I
## [ctrl+b r] tmux reload config
keybind = cmd+r=text:\x02r
## [ctrl+b k] tmux sesh
keybind = cmd+k=text:\x02k
## [ctrl+b z] tmux focus window
keybind = cmd+z=text:\x02z

# Claude Code
keybind = shift+enter=text:\n
